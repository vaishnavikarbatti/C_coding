#include<stdio.h>

int main()
{
    int marks;

    printf("Enter marks between 1 to 100:\n");
    scanf("%d", &marks);  

    if(marks >= 90 && marks <= 100)
    {
        printf("A-grade");
    }
    else if(marks >= 70 && marks < 90)
    {
        printf("B-grade");
    }
    else if(marks >= 50 && marks < 70)
    {
        printf("C-grade");
    }
    else if(marks >= 0 && marks < 50)
    {
        printf("Fail");
    }
    else
    {
        printf("Invalid marks entered.");
    }

    return 0;
}

output:-
Enter marks between 1 to 100:
81
B-grade
